<h1>New Product</h1>
<%= link_to "Products Page", products_url %>

<%= form_for @product do |f| %>
  <p>
    <%= f.label "Name" %><br>
    <%= f.text_field "name" %>
  </p>
  <p>
    <%= f.label "Description" %><br>
    <%= f.text_field "description" %>
  </p>
  <p>
    <%= f.label "price_in_cents" %><br>
    <%= f.text_field "Price (in cents)" %>
  </p>
  <p>
    <%= f.submit "Save" %> 
  </p>
<% end %>