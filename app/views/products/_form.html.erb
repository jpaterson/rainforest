<%= form_for @product do |f| %>
  <div class="field">
    <%= f.label "Name" %><br>
    <%= f.text_field "name" %>
  </div>
  <div class="field">
    <%= f.label "Description" %><br>
    <%= f.text_field "description" %>
  </div>
  <div class="field">
    <%= f.label "price_in_cents" %><br>
    <%= f.text_field "price_in_cents" %>
  </div>
  <div class="actions">
    <%= f.submit %> 
  </div>
<% end %>